<%- include('../header.ejs', {dataUsername}) %>

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block">
                    <img src="/img/login.svg" alt="">
                </div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Ubah Password</h1>
                        </div>
                        <form class="user" action="/updatepassword?_method=PUT" method="post" >
                            <div class="form-group">
                                <input type="hidden" name="id" value="<%= dataAdmin._id %>">
                                <input type="text" name="password" class="form-control form-control-user"
                                    id="exampleInputPassword" required placeholder="Password">
                            </div>
                            <div class="form-group">
                                <input type="text" name="repeatPassowrd" class="form-control form-control-user"
                                        id="exampleRepeatPassword" required placeholder="Repeat Password">
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                Simpan
                            </button>
                           
                        </form>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<%- include('../footer.ejs') %>